<section class="section mt-6">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <div class="card mb-6">
          <div class="form-body" style="margin-left: 100px;">
            <h2>User info</h2>
            <%= form_with model:@user, local:true do |f| %>
              <div class="field">
                <label for="user_name">Name</label>
              <%= f.text_field :name, autofocus: true %>
              </div>
              <div class="field">
                <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                <label for="user_image">Image</label>
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb" %>
                <%= f.attachment_field :profile_image, class: "user-edit-form" %>
              </div>
              <div class="field">
                <label for="user_introduction">Introduction</label>
                <%= f.text_area :introduction, autofocus: true %>
              </div>
              <div class="action"><%= f.submit 'Update User', class: "btn btn-primary mt-20" %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

